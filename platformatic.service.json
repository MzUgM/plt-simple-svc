{
  "$schema": "https://platformatic.dev/schemas/v1.8.0/service",
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    }
  },
  "plugins": {
    "paths": [
      "./plugins",
      "./routes"
    ]
  },
  "watch": {
    "ignore": [
      "*.sqlite",
      "*.sqlite-journal"
    ]
  }
}
